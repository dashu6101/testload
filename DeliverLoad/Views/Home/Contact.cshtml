@model DeliverLoad.Models.ContactModel
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>


<style type="text/css">
    .field-validation-error {
        color: Red;
        font-size: 16px;
    }

    .txtMessage {
        width: 90%;
        border: none;
        border-radius: 5px;
        text-indent: 5px;
        color: #ccc;
        padding: 5%;
       
    }
</style>

<div style="background:#ebebeb;">

    <div class="form_main">

        <!--=====Registration Form=====-->

        <div class="form_wraper" id="form_wraper">
            <div class="title">
                <h2>Contact Us</h2>
            </div>
          
            @using (Ajax.BeginForm("Contact", "Home", new AjaxOptions() { HttpMethod = "Post", OnSuccess = "SaveSuccess", OnFailure = "SaveFailure" }))
            {
                <div class="Email">
                    @Html.TextBoxFor(m => m.FirstName, new { placeholder = "Your Name" })
                   
                    @*<input type="text" name="email" placeholder="Your Name" />*@
                </div>
                <div class="city">
                    @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.UserName)
                    @*<input type="text" name="password" placeholder="Email" />*@
                </div>
                <div class="city" style="width: 100%;">
                    @Html.TextAreaFor(m => m.Message, new { placeholder = "Message", @class = "txtMessage",rows="5" })
                    @Html.ValidationMessageFor(m => m.Message)
                    @*<textarea style="width: 90%; border: none; border-radius: 5px; text-indent: 5px; color: #ccc; padding: 5%;" placeholder="Message" rows="5"></textarea>*@
                </div>
                <div class="submit_button">
                    <input type="submit" name="submit" value="Submit" id="get" />
                </div>
            }
        </div>


    </div>

</div>


<script type="text/javascript">

    function SaveSuccess(result) {

        parent.$.fancybox.close();
        DisplayNotification('Thank you. The mail is on the way...', 'success');
    }

    function SaveFailure(result) {
        DisplayNotification("Error in sending mail", 'error');
        //alert("Error in sending mail");
    }

</script>