@{
    ViewBag.Title = "Document Verification";
}


@using DeliverLoad;
@model DeliverLoad.Models.UserModel

<style type="text/css">
    .field-validation-error {
        color: Red;
    }
</style>


<div class="col-lg-12">
    @{
        var obj = DeliverLoad.Utils.Utils.GetDeliverLoadUser(WebSecurity.CurrentUserName);

        <div class="col-md-2">
            @Html.Partial("_SideMenu")
        </div>

        <div class="col-md-10">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Document Verification
                    </h3>
                </div>

                <div class="panel-body">

                    <div class="col-md-12">
                        @using (Html.BeginForm("DocumentVerification", "Home", FormMethod.Post, new { role = "form", enctype = "multipart/form-data", id = "Documentform" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.HiddenFor(model => model.UserId)
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">

                                        <div class="col-md-2">
                                            @Html.LabelFor(m => m.Mobile)
                                        </div>
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-3">
                                            @if (Model.IsPhoneVerified == true)
                                            {
                                                <label style="color:green">Verified</label>
                                            }
                                            else
                                            {
                                                <label style="color:red">Not Verified</label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">

                                        <div class="col-md-2">
                                            @Html.LabelFor(m => m.EmailID)
                                        </div>
                                        <div class="col-md-7">
                                            @Html.TextBoxFor(m => m.EmailID, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-3">
                                            @if (Model.IsEmailVerified == true)
                                            {
                                                <label style="color:green">Verified</label>
                                            }
                                            else
                                            {
                                                <label style="color:red">Not Verified</label>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>


                            if (obj.UserType == "A")
                            {


                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-md-2">
                                                @Html.LabelFor(m => m.DriverLicense)
                                            </div>
                                            <div class="col-md-10">
                                                @*@Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })*@
                                                <input type="file" name="DriverLicense" id="DriverLicense">

                                            </div>


                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-md-2">
                                                @Html.LabelFor(m => m.VIO)
                                            </div>
                                            <div class="col-md-10">
                                                @*@Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })*@
                                                <input type="file" name="VOI" id="VOI">

                                            </div>


                                        </div>
                                    </div>
                                </div>


                            }

                            if (obj.UserType == "M")
                            {

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="col-md-2">
                                                @Html.LabelFor(m => m.AnyId)
                                            </div>
                                            <div class="col-md-10">
                                                @*@Html.TextBoxFor(m => m.ImageUpload, new { @type = "file" })*@
                                                <input type="file" name="AnyId" id="AnyId">

                                            </div>


                                        </div>
                                    </div>
                                </div>
                            }


                            <div class="form-actions" style="float:right;">
                                <button type="button" class="btn btn-success" id="btnUpdate">Update</button>
                                <button type="button" class="btn btn-default" id="btnCancel">Cancel</button>

                            </div>

                        }
                    </div>


                </div>
            </div>
        </div>

    }

</div>


<script type="text/javascript">
    $(document).ready(function () {
        var Usertype = '@Model.UserType';
        $("#EmailID").attr("disabled", true);
        $("#btnUpdate").on("click", function () {

            var form_data = new FormData();

            var DriverLicense_data;
            var VOI_data;
            var AnyId_data;

            if (Usertype == "A") {
                DriverLicense_data = $("#DriverLicense").prop("files")[0];
                VOI_data = $("#VOI").prop("files")[0];

                form_data.append("DriverLicense", DriverLicense_data);
                form_data.append("VOI", VOI_data);
            }
            else {
                AnyId_data = $("#AnyId").prop("files")[0];
                form_data.append("AnyId", AnyId_data);
            }

            
            
            form_data.append("UserId", $('#UserId').val());
            //form_data.append("ScreenName", $('#ScreenName').val());
            //form_data.append("FirstName", $('#FirstName').val());
            //form_data.append("LastName", $('#LastName').val());
            form_data.append("UserType", Usertype);
            $.ajax({
                url: "/Home/DocumentVerification",
                type: "POST",
                data: form_data,
                cache: false,
                contentType: false,
                processData: false,
                dataType: "Json",
                success: function (data) {
                    if (data == "A") {
                        ////// $('.loading').hide();
                        @*window.location.href = "@Url.Action("Index", "Presenter")";*@
                        window.location.href = "@Url.Action("Index", "Vehicleowner")";
                    }
                    else {
                        ////// $('.loading').hide();
                        window.location.href = "@Url.Action("Index", "Loadowner")";
                    }

                }
            });

        });

        $('#btnCancel').click(function () {
            window.location.href = '/Participant/Index';
        });
    });
</script>