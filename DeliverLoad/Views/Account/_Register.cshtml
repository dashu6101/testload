@model DeliverLoad.Models.RegisterModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "registrationform" }))
{
    @Html.AntiForgeryToken()
   

    <div class="Email">
        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" })
        @Html.ValidationMessageFor(m => m.FirstName)
    </div>

    <div class="city">
        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" })
        @Html.ValidationMessageFor(m => m.LastName)

    </div>
    <div class="city">
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "Email" })
        @Html.ValidationMessageFor(m => m.UserName)
    </div>
    <div class="city">
        @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Your Password." })
        @Html.ValidationMessageFor(m => m.Password)

    </div>
    <div class="submit_button">

        <input type="button" name="submit" class="btnRegister" value="Register"  />
    </div>

}

<style type="text/css">
    .btnRegister {
        font-size: 30px;
        color: #ffffff;
        background: #be4932;
        cursor: pointer;
        padding: 4% 24%;
        border-radius: 30px;
        border: none;
    }
</style>