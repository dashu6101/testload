</head>
<body id="page">
    darshan
    @RenderBody()
    @RenderSection("scripts", required: false)
</body>
</html>
<script>

    $(document).ready(function () {
        var Title = '@TempData["GritterTitle"]';
        var Message = '@TempData["GritterMessage"]';
        if (Title != '' && Message != '')
            DisplayNotification(Message, Title);
    });


    function DisplayNotification(returnvalue, status) {
        if (returnvalue != null) {
            if (status == "success") {
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "0",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut",
                    "tapToDismiss": true
                };

                toastr.success(returnvalue);
            }
            else if (status == "error") {
                toastr.options = {
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": false,
                    "progressBar": false,
                    "positionClass": "toast-top-right",
                    "preventDuplicates": false,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
                    "timeOut": "0",
                    "extendedTimeOut": "1000",
                    "showEasing": "swing",
                    "hideEasing": "linear",
                    "showMethod": "fadeIn",
                    "hideMethod": "fadeOut",
                    "tapToDismiss": true
                };
                toastr.error(returnvalue);
            }
        }
    }

</script>
