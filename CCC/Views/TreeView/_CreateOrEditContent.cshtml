@model CCC.Models.TreeViewNodeVM


@{
    var IsMobileBrowser = Request.Browser.IsMobileDevice;
}


<style type="text/css">
    .field-validation-error {
        color: Red;
    }
</style>

@using (Html.BeginForm("CreateOrEditContent", "TreeView", FormMethod.Post, new { role = "form", id = "contentform", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.NodeId)
    @Html.HiddenFor(model => model.CategoryId)
    <div class="form-group">
        <div class="row">

            <div class="col-lg-12">
                <div class="col-md-2">

                </div>
                <div class="col-md-7">

                    <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-primary" id="lblAdd">
                            <input type="radio" name="Add" id="rdbAdd" value="1">Add

                        </label>
                        <label class="btn btn-info" id="lblEdit">
                            <input type="radio" name="Add" id="rdbEdit" value="2">Edit
                        </label>
                        <label class="btn btn-danger" id="lblDelete">
                            <input type="radio" name="Add" id="rdbDelete" value="3">Delete
                        </label>


                    </div>
                </div>

                <div class="col-md-3">

                </div>

            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">

            <div class="col-lg-12">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.Name)
                </div>
                <div class="col-md-7">

                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Write Content Title", id = "Title" })
                </div>

                <div class="col-md-3">
                    @Html.ValidationMessageFor(model => model.Name)
                </div>

            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-2">
                    @Html.LabelFor(m => m.Description)

                </div>
                <div class="col-md-7">
                    @if (IsMobileBrowser)
                    {
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control MobileBrowser", placeholder = "Write Content Description" })
                    }
                    else
                    {
                        @Html.TextAreaFor(m => m.Description, new { @class = "ckeditor", placeholder = "Write Content Description" })
                    }
                    
                    @*@Html.TextAreaFor(m => m.Description, new { @class = "ckeditor" })*@

                </div>
                <div class="col-md-3">
                    @Html.ValidationMessageFor(model => model.Description)
                </div>

            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-2">

                </div>
                <div class="col-md-10">
                    <button type="button" class="btn btn-success pull-right" id="btnSaveContent">Save</button>
                    <button type="button" class="btn btn-info pull-right" id="btnEditContent">Edit</button>
                    <button type="button" class="btn btn-danger pull-right" id="btnDeleteContent">Delete</button>

                </div>

            </div>

        </div>
    </div>

}




<style type="text/css">
    #cke_Description {
        width: auto !important;
    }
</style>